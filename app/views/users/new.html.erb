<center>

<h1> Welcome </h1>

<%= form_for @user, html: {class: "form-horizontal form-style"} do |f| %>

    <div class="form-group">
        
        <h3><%= f.label :name, {class: "col-lg-4 control-label"} %></h3>
        <div class="col-lg-8">
            <%= f.text_field :name, {class: "form-control", placeholder: "Name"} %>
        </div>
    </div>

       <div class="form-group">
<h3><%= f.label :email, {class: "col-lg-4 control-label"} %></h3>
        <div class="col-lg-8">
            <%= f.text_field :email, {class: "form-control", placeholder: "Email"} %>
        </div>
    </div>   

    <div class="form-group">
    <h3>    <%= f.label :password, {class: "col-lg-4 control-label"} %> </h3>
        <div class="col-lg-8">
            <%= f.password_field :password, {class: "form-control", placeholder: "Password"} %>
        </div>
    </div>

       <div class="form-group">
    <h2><%= f.label :password_confirmation, {class: "col-lg-4 control-label"}  %></h2>
    <div class="col-lg-6">
    <%= f.password_field :password_confirmation, {class: "form-control", placeholder: "Password"}  %>
    </div>
  </div>

       <div class="form-group">
<h3><%= f.label :github, {class: "col-lg-4 control-label"} %></h3>
        <div class="col-lg-8">
            <%= f.text_field :github, {class: "form-control", placeholder: "Email"} %>
        </div>
    </div>   

           <div class="form-group">
<h3><%= f.label :linkedin, {class: "col-lg-4 control-label"} %></h3>
        <div class="col-lg-8">
            <%= f.text_field :linkedin, {class: "form-control", placeholder: "Email"} %>
        </div>
    </div>   

           <div class="form-group">
<h3><%= f.label :facebook, {class: "col-lg-4 control-label"} %></h3>
        <div class="col-lg-8">
            <%= f.text_field :facebook, {class: "form-control", placeholder: "Email"} %>
        </div>
    </div>   


    <div>
    <%= f.submit "Create account", {class:"btn btn-primary btn-block"} %>
    </div>

<% end %>
