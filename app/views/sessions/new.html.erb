<center>
<h1>Welcome </h1>
<%= form_for :login, html: {class: "form-horizontal form-style" } do |f| %>
  <div class="form-group">
      <h2><%= f.label :email, {class: "col-lg-4 control-label"}  %></h2>
    <div class="col-lg-6">
      <%= f.text_field :email, {class: "form-control", placeholder: "Name"}   %>
    </div>
  </div>

  <div class="form-group">
    <h2><%= f.label :password, {class: "col-lg-4 control-label"}  %></h2>
    <div class="col-lg-6">
    <%= f.password_field :password, {class: "form-control", placeholder: "Password"}  %>
    </div>
  </div>

  <div>
    <%= f.submit 'Log In', {class:"btn btn-primary btn-block"}  %>
  </div>
<% end %>
</center>