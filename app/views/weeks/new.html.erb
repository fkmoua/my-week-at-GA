<div class="container-fluid">

<div class="masthead">
      <h3 class="text-muted">Your Week at GA</h3>   

  </div>

<center>
<form class="form-inline"> 
<%= form_for @week do |f| %>

    <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class:"form-control", placeholder:"Week" %>
    </div>
    <br>
    <br>

    <div class="form-group">
    <%= f.label :date %>
    <%= f.text_field :date, class:"form-control" %>
    </div>
    <br>
    <br>

      <div class="form-group">
    <%= f.label :message %>
    <%= f.text_area :message, class:"form-control" %>
    </div>
      <br>
    <br>

      <div>
    <%= f.label :this_week %>
    <%= f.text_area :this_week, class:"form-control" %>
    </div>
    <br>
    <br>

    <div>
    <%= f.label :next_week %>
    <%= f.text_area :next_week, class:"form-control" %>
    </div>
    <br>
    <br>

    <div>
    <%= f.label :office_hours %>
    <%= f.text_area :office_hours, class:"form-control" %>
    </div>


    <%= f.submit "Add Week"%>

<% end %>

</div>
</form>
</center>