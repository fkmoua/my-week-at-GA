<%= render "shared/navbar" %>

<div class="container-fluid">

<div class="masthead">
      <h3 class="text-muted">Your Week at GA</h3>   
</div>

<center>
<%= form_for @week, html: {class: "form-horizontal form-style"}  do |f| %>

    <h2> This week </h2>
    <div class="form-group">
    <%= f.label :name, {class: "col-lg-7 control-label"}  %>
    <%= f.text_field :name , {class: "form-control"}%>
    </div>


    <div class="form-group">
    <%= f.label :date, {class: "col-lg-7 control-label"}  %>
    <%= f.text_field :date, {class: "form-control"}%>
    </div>

    <div class="form-group">
    <%= f.label :message, {class: "col-lg-7 control-label"}  %>
    <%= f.text_area :message, {class: "form-control"}%>
    </div>

    <div class="form-group">
    <%= f.label :this_week, {class: "col-lg-7 control-label"}  %>
    <%= f.text_area :this_week, {class: "form-control"}%>
    </div>

    <div class="form-group">
    <%= f.label :next_week, {class: "col-lg-7 control-label"}  %>
    <%= f.text_area :next_week, {class: "form-control"}%>
    </div>

    <div class="form-group">
    <%= f.label :office_hours, {class: "col-lg-7 control-label"}  %>
    <%= f.text_area :office_hours, {class: "form-control"} %>
    </div>

    <%= f.submit "Add Week" %>

<% end %>

</center>