<div class="container-fluid">

  <div class="masthead">
      <h3 class="text-muted">Events</h3>   
  </div>

     <div class="jumbotron home-style">
        <%= link_to("New event", new_event_path, {class:"btn btn-primary"}) %>a

        <%= month_calendar table: {class: "table table-bordered"}, tr: {class: "calendar-row"}, td: {class: "day"}, events: @events do |date, events| %>
          <%= date.beginning_of_week %>

            <% events.each do |event| %>
              <div>
                <%= event.name %>
              </div>
            <% end %>
        <% end %>
    </div> 
</div>


</div>



